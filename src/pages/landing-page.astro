---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { Image } from "astro:assets";
import { getEntry } from "astro:content";
import BannerLandingPage from "@/components/BannerLandingPage.astro";
import CookieConsent from "../pages/components/CookieConsent";
import ChatUI from "@/chat/ChatUI";

const entry = await getEntry("contact", "index");
const { contact_form_action } = config.params;
const contact = entry.data;
const page_data = {
  ...contact,
  content: contact.body,
};
---

<Base
  title="Juan Jaramillo AI Consulting Services"
  meta_title={contact.meta_title}
  description={contact.description}
  image={contact.image}
>
  <section class="page-hero pb-6 pt-16">
    <BannerLandingPage />
  </section>

  <section class="section pt-0">
    <div class="container">
      <div class="row">
        <div class="mb-10 text-center md:col-6 md:order-2 md:mb-0 md:pt-0">
          <div class="contact-img relative inline-flex pb-5 pl-5">
            <div>
              <h3 class="mb-5">
                Doubts? Questions? Ask our AI Agent!
              </h3>
              <p
                class="text-center mt-4 p-0 lg:mx-0 xl:mx-0 2xl:mx-0 lg:text-md lg:w-full xl:w-full 2xl:w-full"
              >
              No more contact forms! Our Agent is trained to answer any type of question you may have regarding the Juan Jaramillo AI Consulting Services, so go ahead and ask!
              </p>
              <ChatUI client:load />
            </div>
            <div>
              <Image
                class="absolute bottom-0 left-0 -z-[1] h-14 w-14"
                src="/images/shape-2.png"
                alt=""
                height={56}
                width={56}
              />
            </div>
          </div>
        </div>
        <div class="md:col-6 md:order-1">
          <form
            class="lg:max-w-[484px]"
            action={contact_form_action}
            method="POST"
          >
            <div class="form-group mb-5">
              <label class="form-label" for="name">Full Name</label>
              <input
                class="form-control"
                type="text"
                id="name"
                placeholder="Your Full Name"
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="eamil">Email Adrdess</label>
              <input
                class="form-control"
                type="text"
                id="email"
                placeholder="Your  Email Address"
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="reason">Reason/Purpose</label>
              <select name="reason" id="reason" class="form-select" required>
                <option value="">Select reason/purpose</option>
                <option value="investment plane">Investment Plan</option>
                <option value="investment plane-2">Investment Plan 2</option>
                <option value="investment plane-3">Investment Plan 3</option>
              </select>
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="message">Message Here</label>
              <textarea
                class="form-control h-[150px]"
                id="message"
                cols="30"
                rows="10"></textarea>
            </div>
            <input
              class="btn btn-primary block w-full"
              type="submit"
              value="Send Message"
            />
          </form>
        </div>
      </div>
    </div>
  </section>
  <CookieConsent client:load />
</Base>
